{
  "name": "se-2",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/frontend",
      "packages/hardhat"
    ]
  },
  "scripts": {
    "chain": "yarn workspace @se-2/hardhat chain",
    "deploy": "yarn workspace @se-2/hardhat deploy",
    "hardhat:test": "yarn workspace @se-2/hardhat test",
    "start": "yarn workspace @se-2/frontend dev",
    "lint": "yarn workspace @se-2/frontend lint",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "lint-staged": {
    "packages/frontend/**/*.{ts,tsx}": [
      "yarn workspace  @se-2/frontend lint --fix",
      "yarn workspace  @se-2/frontend format"
    ]
  }
}
